<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pl.oldzi.olgachrostowska.LogActivity"
    android:background="#1a237e"
    tools:showIn="@layout/activity_log">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Email"
        android:id="@+id/emailEditText"
        android:layout_below="@+id/text3"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:id="@+id/passwordEditText"
        android:layout_below="@+id/emailEditText"
        android:layout_alignLeft="@+id/emailEditText"
        android:layout_alignStart="@+id/emailEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Well, the snow has nothing to do with our app..."
        android:id="@+id/text1"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#304ffe"
        android:singleLine="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="But there&apos;s no snow in our beautiful country"
        android:id="@+id/text2"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#3d5afe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="So let&apos;s make it frosty! :)"
        android:id="@+id/text3"
        android:textAlignment="center"
        android:textColor="#8c9eff"
        android:textSize="25dp"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Log in"
        android:id="@+id/logBut"
        android:textColor="@color/colorButtonText"
        android:background="@drawable/round_button"
        android:layout_below="@+id/passwordEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="❆"
        android:id="@+id/emailFlake"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        android:visibility="invisible"
        android:layout_alignTop="@+id/emailEditText"
        android:layout_toLeftOf="@+id/emailEditText"
        android:layout_toStartOf="@+id/emailEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="❆"
        android:id="@+id/passFlake"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        android:visibility="invisible"
        android:layout_below="@+id/emailEditText"
        android:layout_alignLeft="@+id/emailFlake"
        android:layout_alignStart="@+id/emailFlake" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❆"
        android:id="@+id/textView7"
        android:textSize="50dp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView13"
        android:layout_toLeftOf="@+id/text1"
        android:layout_toStartOf="@+id/text1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❆"
        android:id="@+id/textView10"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/logBut"
        android:layout_toLeftOf="@+id/passwordEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❆"
        android:id="@+id/textView13"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/passwordEditText"
        android:layout_toRightOf="@+id/text2"
        android:layout_toEndOf="@+id/text2"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❆"
        android:id="@+id/textView14"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/emailEditText"
        android:layout_toRightOf="@+id/text2"
        android:layout_toEndOf="@+id/text2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❆"
        android:id="@+id/textView15"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/text3"
        android:layout_toRightOf="@+id/textView14"
        android:layout_toEndOf="@+id/textView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❆"
        android:id="@+id/textView17"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/logBut"
        android:layout_alignBottom="@+id/logBut"
        android:layout_alignRight="@+id/text1"
        android:layout_alignEnd="@+id/text1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❆"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/passFlake"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp" />

</RelativeLayout>
